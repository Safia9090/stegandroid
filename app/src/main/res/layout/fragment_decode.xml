<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EncodeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_decode"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/button_openimage_decode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_decode"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Choose Image" />

            <EditText
                android:id="@+id/edittext_key_decode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_openimage_decode"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:hint="Input Secret Key"
                android:inputType="numberPassword" />

            <TextView
                android:id="@+id/edittext_message_decode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittext_key_decode"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:hint="Message"
                android:inputType="text"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_decode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittext_message_decode"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Decode" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>